<%= render 'users/userinfo', user: @user %>

<h1>New book</h1>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<table>
  <tr>
    <th>image</th>
    <th>name</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= image_tag book.user.get_profile_image(100,100) %>
    </td>
    <td>
      <%= user.name %>
    </td>
    <td>
      <%= link_to "Show", user_path(@user.id) %>
    </td>
  </tr>
  <% end %>
</table>