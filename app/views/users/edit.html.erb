<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <input class="form-control name" type="text" <%= f.text_field :name, autofocus: true, id:"user_name" %>
        </div>

        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>

        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <textarea class="form-control introduction" <%= f.text_field :introduction, autofocus: true, id:"iuser_introduction" %></textarea>
        </div>

        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
        <% end %>

    </div>
  </div>
</div>
