    <div class="col-md-3">

<h2 class="mt-3">New book</h2>
<form action="/books" accept-charset="UTF-8" method="post">
  <div class="form-group">
    <label for="book_title">Title</label>
    <input class="form-control book_title" type="text" name="book[title]" id="book_title">
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <textarea class="form-control book_body" name="book[body]" id="book_title"></textarea>
  </div>
  <div class="form-group">
    <!--<input type="submit" name="commit" value="Create Book" class="btn btn-succes" data-disable-with="Create Book">-->
    <%= form_with model: book do |f| %>
      <%= f.submit 'Create Book', class: "btn btn-success" %>
    <% end %>
  </div>
</form>

